<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewReceivedMessage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFrom"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="From"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/txt_sender"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="sender email"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/textViewFrom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSubject"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="Subject"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFrom"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/txt_subject"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="email subject"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/textViewSubject"
            app:layout_constraintTop_toBottomOf="@+id/textViewFrom" />

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="Message"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSubject"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/txt_message"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="email message"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/textViewMessage"
            app:layout_constraintTop_toBottomOf="@+id/textViewSubject" />

        <TextView
            android:id="@+id/textViewKey"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="205dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="Key"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/txt_key"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="insert key"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/textViewKey"
            app:layout_constraintTop_toBottomOf="@+id/textViewMessage" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_key" />

        <Button
            android:id="@+id/btn_Decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/blue1"
            android:textSize="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Decrypt"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress" />

        <TextView
            android:id="@+id/textViewDecryptedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Decrypted Message"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_Decrypt" />

        <TextView
            android:id="@+id/decryptedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:focusable="false"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDecryptedMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>