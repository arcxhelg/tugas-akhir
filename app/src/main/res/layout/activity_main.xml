<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter message"/>

    <EditText
        android:id="@+id/keyInput"
        android:layout_below="@id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter encryption key"/>

    <Button
        android:id="@+id/encryptButton"
        android:layout_below="@id/keyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encrypt"/>

    <Button
        android:id="@+id/decryptButton"
        android:layout_below="@id/encryptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrypt"/>

    <TextView
        android:id="@+id/outputMessage"
        android:layout_below="@id/decryptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>